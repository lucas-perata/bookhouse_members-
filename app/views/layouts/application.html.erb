<!DOCTYPE html>
<html>

  <head>
    <title>Bookhouse</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_tag "main" %>
  </head>
  
  <body>
  <% if notice %>
     <div class="flash alert">
       <p class="notification is-success"><%= notice %></p>
      </div>
     <% end %>

     <% if alert %>
     <div class="flash">
     <p class="notification is-danger"><%= alert %></p>
       </div>
     <% end %>

     <nav class="navbar is-dark">
        <div class="navbar-brand">
          <%= link_to root_path, class:"navbar-item" do %>
          <p class="title is-4 has-text-white" >Bookhouse</p>
          <% end %>
          <div class="navbar-burger burger" onclick="document.querySelector('.navbar-menu').classList.toggle('is-active');">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </div>
        </div>

        <div class="navbar-menu">
          <div class="navbar-start">
          
          </div>
          <div class="navbar-end">

            <% if member_signed_in? %>


            <div class="navbar-item">
              <div class="control">
                <%= link_to "Owl", new_owl_path %>
              </div>
            </div>

            <div class="navbar-item">
              <div class="control">
                <%= link_to current_member.name, edit_member_registration_path, class:"button is-info" %>
              </div>
            </div>
            
             
              
             

              

              
              <div class="navbar-item">
                <div class="control">
                  <%= button_to "Sign out", destroy_member_session_path, method: :delete, class:"button is-info is-danger"%> 
                </div>
              </div>
             
                
             
            <% else %>

            <div class="navbar-item">
              <div class="control">
              <%= link_to "Sign in", new_member_session_path, class:"button is-success" %>
            </div>
            </div>

               

          
          <% end %>
            </div>
          </div>
        </div>
     
     </nav>

     


    <%= yield %>



  </body>
 
</html>
