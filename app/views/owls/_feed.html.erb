<div class="column is-half is-centered">
    <% if member_signed_in? %>
    <article class="media box">
            <div class="media-left">
                <figure class="image is-64x64">
                 <img src="https://bulma.io/images/placeholders/64x64.png" alt="placeholder">
                </figure>
            </div>

        <div class="media-content">
            <%= render 'form' %>
        </div>
    </article>

    <% end %>

<% @owls.each do |owl| %>
    <div class="box">
       <article class="media">
            <div class="media-left">
            <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" alt="placeholder">
            </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <% if member_signed_in? %>
                    <strong> <%= owl.member.name %> </strong> <br>
                    
                    <small><%= owl.member.username %></small> <br>
                   <% end %>
                    <p> <%= owl.owl %></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                    <% if signed_in? %>
                        <%= link_to owl, class: "item" do  %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i> </span>
                        <% end %>
                        <%= link_to edit_owl_path(owl), class: "item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i> </span>
                        <% end %>
                        <%= link_to owl, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete it?" } do %>
                            <span class="icon"> <i class="fa fa-trash-o" aria-hidden="true"> </i> </span>
                            <% end %>
                        <% end %>
                    </div> 
                </nav>
            </div>
        </article>
    </div>
<% end  %>
</div>